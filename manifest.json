{
  "name": "gRecipes",
  "version": "1.4",
  "icons": {
    "48": "img/grecipe-48.png",
    "128": "img/grecipe-128.png"
  },
  "description": "Import recipes to google docs.",
  "background_page": "background.html",
  "options_page": "options.html",
  "page_action": {
    "default_icon": "img/grecipe-32.png",
    "default_title": "gRecipes",
    "default_popup": "popup.html"
  },
  "content_scripts": [ {
      "js": [ "lib/jquery-1.4.2.min.js", "js/epicurious.js" ],
      "matches": [ "http://www.epicurious.com/*" ] } , {
      "js": [ "lib/jquery-1.4.2.min.js", "js/food.js" ],
      "matches": [ "http://www.food.com/*" ] } , {
      "js": [ "lib/jquery-1.4.2.min.js", "js/foodandwine.js" ],
      "matches": [ "http://www.foodandwine.com/*" ]
   } ],
  "permissions": [
    "tabs",
    "https://docs.google.com/feeds/*",
    "https://www.google.com/accounts/OAuthGetRequestToken",
    "https://www.google.com/accounts/OAuthAuthorizeToken",
    "https://www.google.com/accounts/OAuthGetAccessToken",
    "http://www.epicurious.com/*"
  ]
}
